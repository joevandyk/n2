%fb:fbml
  - title = (out = yield(:title)) ? "#{out} - #{get_setting('site_title').try(:value)}" : get_setting('site_title').try(:value)
  = fb_title title
  %meta{:name => 'title', :content => title}
  %meta{:name => 'description', :content => (out = yield(:meta_description)) ? out : ""}
  %meta{:name => 'medium', :content => 'news'}
  %link{:rel  => "image_src", :href => (out = yield(:meta_image)) ? out : image_path('default/icon-fan-app.gif')}

  = stylesheet_link_tag 'fb_grid'

  %style
    :sass
      .moderator-links
        display: none !important
      .admin-links
        display: none !important

  #appFrame
    = display_facebook_messages
    = yield
